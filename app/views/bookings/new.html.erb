<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h1>New Booking bor this board</h1>

      <%= simple_form_for [ @board,@booking ] do |f| %>
        <%= f.input :begin_date %>
        <%= f.input :end_date %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "Back to board page", board_path(@board), class: "btn btn-secondary mt-2" %>
    </div>
  </div>
</div>
