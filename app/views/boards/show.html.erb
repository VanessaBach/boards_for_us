<div class = "row" style="margin-top:90px">
  <div class = "col-6">
    <div class="banner mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @board.photo.key %>)">
      <div class="banner-content text-center">
        <h1 class = text-center><%= @board.style %></h1>
        <% case @board.style %>
          <% when "Long" %>
          <h2> Long boards are the best type for begginners</h2>
          <% when "Pranchinha" %>    <div class="banner mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @board.photo.key %>)">

          <h2> Those are for advanced people</h2>
          <% when "SUP" %>
          <h2> Go paddle and chill</h2>
        <% end %>

        <p>
          <span id="banner-typed-text"></span>
        </p>
      </div>
    </div>
  </div>


  <div class = "col-6">
    <div class="container mt-3">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8">
          <h1><em>Board attributes</em></h1>

          <h2> Board style: <br> <strong><%=@board.style%></strong></h2>
          <h2> Board syze (relative to style): <br> <strong><%=@board.size%></strong></h2>
          <h2>Board year: <br> <strong><%=@board.year%></strong></h2>
          <h2>Price per day for this board: <br> <strong> <%=@board.price_per_day%></strong></h2>
          <%= link_to "Back to all boards", boards_path, class: "btn btn-secondary mr-3" %>
          <%= link_to "Rent this board!", new_board_booking_path(@board), class: "btn btn-success" %>

        </div>
      </div>
    </div>
  </div>
</div>


